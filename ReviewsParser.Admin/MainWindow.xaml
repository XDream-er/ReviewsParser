<Window x:Class="ReviewsParser.Admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"       
        xmlns:local="clr-namespace:ReviewsParser.Admin" 
        mc:Ignorable="d"
        Title="Панель управления парсером" Height="650" Width="1100">

    <Window.Resources>
        <local:Converter x:Key="StatusConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Column="0" Header="Список задач" Margin="0,0,10,0">
            <ListView ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="40"/>
                        <GridViewColumn Header="Сайт" DisplayMemberBinding="{Binding TargetSite}" Width="120"/>

                        <GridViewColumn Header="Статус" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Status, Converter={StaticResource StatusConverter}}" FontWeight="Bold"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Агент" DisplayMemberBinding="{Binding AssignedAgentId}" Width="100"/>

                        <GridViewColumn Header="Прогресс" Width="240">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="Обработано: {0} | URL: {1}">
                                                <Binding Path="ItemsProcessed"/>
                                                <Binding Path="ProgressIdentifier" TargetNullValue="-"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Обновлено" DisplayMemberBinding="{Binding UpdatedAt, StringFormat='HH:mm:ss'}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <TabControl Grid.Column="1">
            <TabItem Header="⚙️ Управление">
                <StackPanel Margin="10">
                    <GroupBox Header="Новая задача" Padding="5">
                        <StackPanel>
                            <Label Content="Сайт:"/>
                            <ComboBox ItemsSource="{Binding AvailableSites}" 
                                      SelectedItem="{Binding SelectedSite}" 
                                      Margin="0,0,0,10"/>

                            <Expander Header="Настройки прокси" IsExpanded="True" BorderBrush="LightGray" Margin="0,0,0,10">
                                <StackPanel Margin="5">
                                    <Label Content="Адрес (IP:Port):"/>
                                    <TextBox Text="{Binding ProxyAddress}" Margin="0,0,0,5"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,2,0">
                                            <Label Content="Логин:"/>
                                            <TextBox Text="{Binding ProxyUser}"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Margin="2,0,0,0">
                                            <Label Content="Пароль:"/>
                                            <TextBox Text="{Binding ProxyPass}"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Expander>

                            <Button Content="Создать новую задачу" 
                                    Command="{Binding CreateTaskCommand}" 
                                    Height="35" Background="#DDDDFF" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Действия" Margin="0,10,0,0" Padding="5">
                        <StackPanel>
                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="Пауза" Command="{Binding PauseTaskCommand}" Margin="0,0,2,0" Height="30"/>
                                <Button Grid.Column="1" Content="Продолжить" Command="{Binding ResumeTaskCommand}" Margin="2,0,0,0" Height="30"/>
                            </Grid>
                            <Button Content="Экспорт в CSV" Command="{Binding ExportToCsvCommand}" Height="30"/>
                        </StackPanel>
                    </GroupBox>

                    <Separator Margin="0,15,0,15"/>
                    <Button Content="Запустить агента" Command="{Binding StartLocalAgentCommand}" Height="40" Background="#FFE6F2FF"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="🌐 Прокси">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" Content="Импорт из .txt файла" 
                            Command="{Binding ImportProxiesCommand}" Margin="0,0,0,5" Padding="5"/>

                    <ListView Grid.Row="1" ItemsSource="{Binding Proxies}" SelectedItem="{Binding SelectedProxyItem}" BorderThickness="1" BorderBrush="Gray">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Адрес" DisplayMemberBinding="{Binding DisplayName}" Width="180"/>
                                <GridViewColumn Header="Протокол" DisplayMemberBinding="{Binding Protocol}" Width="70"/>
                                <GridViewColumn Header="Пинг" DisplayMemberBinding="{Binding PingDisplay}" Width="70"/>
                            </GridView>
                        </ListView.View>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsBest}" Value="True">
                                        <Setter Property="Background" Value="#E8F5E9"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>

                    <StackPanel Grid.Row="2" Margin="0,5,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="Пропинговать" Command="{Binding PingProxiesCommand}" Margin="0,0,2,0" Padding="5"/>
                            <Button Grid.Column="1" Content="Выбрать лучший" Command="{Binding SelectBestProxyCommand}" Margin="2,0,0,0" Padding="5" Background="#FFF9C4"/>
                        </Grid>
                        <TextBlock Text="Что-бы использовать прокси клик по нму" FontSize="10" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>